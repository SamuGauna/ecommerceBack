<div class="d-flex justify-content-end" style="margin-top: 50px; margin-right: 150px;">
  <svg xmlns="http://www.w3.org/2000/svg" width="56" height="36" fill="currentColor" class="bi bi-cart text-success" viewBox="0 0 16 16">
  <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
</svg>
 <span id="cartItemCount" class="badge badge-danger" style="position: relative; top: -10px; left: -10px; color:black; font-size: 30px;">{{quantityProdId}}</span>
</div>
<div class="container">
    <div style="padding: 80px"; class="row">
        {{#each products}}
            <div class="card" style="width: 18rem;">
                <img style="margin: 0 auto; width:150px; text-align: center;" src="{{thumbnail}}" class="card-img-top" alt="...">
                <div class="card-body">
                  <h1 id="idProduct_{{_id}}" style="text-align: center; font-size:25px; display:none" class="card-text"> {{_id}}</h1>
                    <h1 style="text-align: center; font-size:25px;" class="card-text"> {{title}}</h1>
                    <h2 style="text-align: center; font-size:20px;" class="card-text"> {{description}}</h2>
                    <h2 style="text-align: center; font-size:20px;" class="card-text"> $ {{price}}</h2>
                    <h2 style="color:red; text-align: center; font-size:10px;" class="card-text"> Stock: {{stock}}</h2>

                <button data-product-id="{{_id}}" id="addCart" type="submit" style="display: block; margin: 0 auto;" class="btn btn-primary addToCartBtn">ADD TO CART</button>


                </div>
            </div>
            {{/each}}
    </div>
</div>







<footer style="width: 100%; bottom: 0; position: fixed; background-color:white; padding-top: 30px; bottom: 0; padding-top: 5px;">
  <div style="text-align: center; ">
    {{#each pageNumbers}}
      {{#if this.isCurrent}}
        <a style="text-align: center; font-size: 22px;" href="{{null}}">{{this.number}}</a>
      {{/if}}
      {{#if this.isPrevious}}
        <a style="text-align: center; font-size: 22px;" href="{{this.link}}">{{this.number}}</a>
      {{/if}}
      {{#if this.isNext}}
        <a style="text-align: center; font-size: 22px;" href="{{this.link}}">{{this.number}}</a>
      {{/if}}
    {{/each}}
  </div>
</footer>


